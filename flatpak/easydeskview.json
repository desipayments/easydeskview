{
    "id": "com.desipayments.easydeskview",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "easydeskview",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--device=all",
        "--share=network"
    ],
    "modules": [
        {
            "name": "easydeskview-bin",
            "buildsystem": "simple",
            "build-commands": [
                "bsdtar -O -xf easydeskview.deb data.tar.xz | bsdtar -C /app -xvf -",
                "mv /app/usr/bin/easydeskview /app/bin/easydeskview",
                "rm -rf /app/usr",
                "install -D /app/bin/easydeskview /app/bin/easydeskview"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "easydeskview.deb"
                }
            ]
        }
    ]
}